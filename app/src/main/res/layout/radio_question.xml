<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/question_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="Question #1 of 10"
            android:textSize="15sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_header"
            android:gravity="center"
            android:text="This is where the question  is?"
            android:textSize="20sp"
            android:visibility="visible" />

        <RadioGroup

            android:id="@+id/answer_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/question"
            android:orientation="vertical"
            android:padding="20dp">

            <RadioButton
                android:id="@+id/radio_answer_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="Answer1"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/radio_answer_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="Answer2"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/radio_answer_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="Answer3"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/radio_answer_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="Answer4"
                android:visibility="visible" />
        </RadioGroup>

        <TextView
            android:id="@+id/results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/answer_box"
            android:gravity="center"
            android:text="blablabla"
            android:textSize="20sp" />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/results">

            <Button
                android:id="@+id/submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="20dp"
                android:onClick="submit"
                android:text="Submit"
                android:visibility="visible" />

            <Button
                android:id="@+id/next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:onClick="refresh"
                android:text="Next"
                android:visibility="visible" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>